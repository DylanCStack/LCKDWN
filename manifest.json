{
  "manifest_version": 2,
  "name": "LCKDWN",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["dist/content.bundle.js"]
    }
  ],
  "background": {
    "scripts": ["dist/background.bundle.js"],
    "persistent": true
  },
  "permissions": [
    "storage",
    "debugger"
  ],
  "browser_action": {
    "default_icon": "media/icon.png"
  },
  "options_ui" : {
    "page": "index.html",
    "open_in_tab": true
  }
}