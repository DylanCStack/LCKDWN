{
  "manifest_version": 2,
  "name": "LCKDWN",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_icon": "media/icon.png"
  }
}